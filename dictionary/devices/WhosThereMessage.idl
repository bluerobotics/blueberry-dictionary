module Blueberry {

	/**
	 * a request by the bus controller to all devices that have not communicated successfully recently
	 * the controller can specify the probability and timeframe that the peripherals will respond
	 * the peripherals will respond with an idPayload
	 */
	@topic("blueberry/devices/{device_type}/{nid}/whos-there")
	@message_key()
	message WhosThereMessage {
		float probability; //the probability that the peripheral will respond. 1.0 is 100% probability, 0.0 is zero.
		float time; //the time in seconds within which the device should respond.
	};
	

	
};
