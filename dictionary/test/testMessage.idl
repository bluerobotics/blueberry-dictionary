/*
 *The purpose of this module is to test module functionality
 */
module ThisIsATestModule::AndAnother {
	//this defines the numerical namespace that official blueberry messages will live within
	
	const uint16 BLUEBERRY_NAMESPACE = 0x42;
	
	typedef uint16 BlahType[10];
	typedef float Matrix3x3[3][3];
	typedef uint32 AnotherType;
	
	enum TestEnum {
		UNDEFINED = 65536,
		FIRST_VALUE,
		SECOND_VALUE = 12,
		THIRD_VALUE,
		FOURTH_VALUE = 33,
		FIFTH_VALUE,
		SIXTH_VALUE = 34
	}
		

	/*
	 A message to convey hardware and firmware versions in addition to hardware type
	 */
	@topic("blueberry/devices/{device_type}/{nid}/test")
	@revision(1)
	@namespace(BLUEBERRY_NAMESPACE)
	message TestMessage {
		BlahType test1;
		uint8 test2;
		string test3;
		AnotherType test13;
		
	
	}

}

